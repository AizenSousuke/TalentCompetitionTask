@model Talent.WebApp.Models.Account.ResetPasswordModel
@{

    ViewBag.Title = "Change your password";
}

<div class="ui container">

    <div class="ui">
        <div class="ui text">
            @Html.ValidationSummary(true)
        </div>
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "ui form" }))
        {
            @Html.AntiForgeryToken()

            <input name="Email" value="@Model.Email" type="hidden" id="Email" />
            <input name="OldPassword" value="@Model.OldPassword" type="hidden" id="OldPassword" />

            <div class="fields">
                <div class="field" id="password">
                    <p>When you change your password, you can log back in with your new password.</p>
                </div>
            </div>

            <div class="four fields">
                <div class="field" id="password">
                    <label for="NewPassword">New Password</label>
                    <input name="NewPassword" type="password" placeholder="New password">
                </div>
            </div>

            <div class="four fields">
                <div class="field">
                    <label for="ConfirmPassword">Confirm Password</label>
                    <input name="ConfirmPassword" type="password" placeholder="Confirm Password">
                </div>
            </div>

            <div class="fields">
                <div class="field">
                    <div id="skin-recaptcha-error"></div>
                    <div class="g-recaptcha" data-theme="light" data-sitekey="@Model.RecaptchaSiteKey" style="transform:scale(0.90);-webkit-transform:scale(0.90);transform-origin:0 0;-webkit-transform-origin:0 0;"></div>
                </div>
            </div>

            <div class="fields">
                <div class="field">
                    <div class="ui primary submit button" id="submit-btn">Submit</div>
                    <div class="ui reset button">Reset</div>
                </div>
            </div>
        }
    </div>
</div>
@section styles
{
    <style>
        .ui.label.visible:not(.dropdown), .ui.labels.visible .label {
            display: block !important;
        }

        .recaptcha-checkbox-border {
            border-radius: 2px;
            background-color: #fff;
            border: 2px solid #c1c1c1;
            font-size: 1px;
            height: 14px !important;
            position: absolute;
            width: 14px !important;
        }

        .rc-anchor-checkbox {
            margin: 12px 12px 2px 12px !important;
        }
    </style>
}

@section scripts
{
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="~/Scripts/Views/account.reset.password.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/Views/recaptcha.validation.js"></script>
}