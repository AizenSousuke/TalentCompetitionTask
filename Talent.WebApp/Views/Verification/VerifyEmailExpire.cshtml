@using Talent.WebApp.Content.Resources

<div class="ui center aligned container" id="skin-email-verification">
    <div class="ui icon message">
        <div class="content">
            <div class="ui divider hidden"></div>
            <div class="header">
                Resend Email Code
            </div>
            <div class="ui divider hidden"></div>
            <p class="ui info cat-verify-expired-message">
                Your verification email is expired. Please click a below button to resend the code.
            </p>
            <a href="/Account/ResendEmailCode?email=@ViewBag.Email">
                <div class="ui button">Resend</div>
            </a>

            <div class="ui divider hidden"></div>
        </div>
    </div>
</div>

@section styles
{
    <style>
        #skin-email-verification {
            width: 50%
        }

        .ui.icon.message > .icon:not(.close) {
            display: block;
            -webkit-box-flex: 0;
            -ms-flex: 0 0 auto;
            flex: 0 0 auto;
            width: auto;
            line-height: 1;
            vertical-align: middle;
            font-size: 2em;
            opacity: 0.8;
        }

        .cat-verify-expired-message {
            color: darkred;
        }
    </style>
}
