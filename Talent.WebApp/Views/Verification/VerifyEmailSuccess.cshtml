@using Talent.WebApp.Content.Resources

<div class="ui center aligned container" id="email-verification">

    <div class="ui icon message">
        <div class="content">
            <div class="ui divider hidden"></div>
            <div class="header">
                Email Verification
            </div>
            <div class="ui divider hidden"></div>
            <p class="verify-success-message">
                Your email has been verified successfully. Please click below button to login.
                <a href="/Account/LogIn">
                    <div class="ui button">@ViewModelLabels.Login</div>
                </a>
            </p>
            <div class="ui divider hidden"></div>
        </div>
    </div>
</div>

@section styles
{
    <style>
        #email-verification {
            width: 50%
        }

        .ui.icon.message > .icon:not(.close) {
            display: block;
            -webkit-box-flex: 0;
            -ms-flex: 0 0 auto;
            flex: 0 0 auto;
            width: auto;
            line-height: 1;
            vertical-align: middle;
            font-size: 2em;
            opacity: 0.8;
        }

        .verify-success-message {
            color: green;
        }
    </style>
}